@model HospitalProject.Models.News

<main class="secondary-main">
    <div class="row">
        <div class="col-xs-3 container-fluid">

            <!-- Slideout Button -->
            <button class="slideout_btn" type="button">
                <div class="show-more">
                    <img src="~/Images/show-more.png" alt="Show More" />
                </div>
            </button>

            <!-- Slideout Aside - Shows in Mobile -->
            <div class="slideout">
                @Html.Partial("_AdminAside")
            </div>

            <!-- Static Aside - Hides in Mobile-->
            <div class="aside-hide">
                @Html.Partial("_AdminAside")
            </div>
        </div>
        <div class="col-md-9 col-sm-9 col-xs-9 page-row">
            <div class="container">


                @* MAIN CONTENT - ADD YOUR FEATURE HERE *@
                <div class="container">
                    <div class="row">
                        <h1 class="text-center">@Html.DisplayFor(model => model.Title)</h1>
                    </div>
                    <div class="row">
                        <blockquote class="small text-left">@Html.DisplayFor(model => model.Blurb)</blockquote>
                    </div>
                    <div class="row">
                        <div class="text-center col-md-10 col-sm-10 col-xs-10  col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-sm-offset-1">
                            <img width="100%" class="img-responsive text-center" src="~/Images/@Model.Photo" />
                        </div>
                    </div>
                    &nbsp;
                    <div class="row">
                        <div class="col-md-10 col-sm-10 col-xs-10 text-center col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-sm-offset-1"> @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.Content))</div>
                    </div>

                </div>




                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>









                @* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
            </div> <!-- End of Page Container -->
        </div> <!-- End of Page Column -->
    </div> <!-- End of Row -->
</main> <!-- End of Main -->
