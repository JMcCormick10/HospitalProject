@model IEnumerable<HospitalProject.Models.News>
<main class="secondary-main">
    <div class="row">
        <div class="col-xs-3 container-fluid">

            <!-- Slideout Button -->
            <button class="slideout_btn" type="button">
                <div class="show-more">
                    <img src="~/Images/show-more.png" alt="Show More" />
                </div>
            </button>

            <!-- Slideout Aside - Shows in Mobile -->
            <div class="slideout">
                @Html.Partial("_AdminAside")
            </div>

            <!-- Static Aside - Hides in Mobile-->
            <div class="aside-hide">
                @Html.Partial("_AdminAside")
            </div>
        </div>
        <div class="col-md-9 col-sm-9 col-xs-9 page-row">
            <div class="container">


                @* MAIN CONTENT - ADD YOUR FEATURE HERE *@
                <div class="col-md-12 col-sm-6 col-xs-12 col-sm-offset-1">
                    <h2>Created Pages/News</h2>
                    <p>This is the list of all the created pages for the hospital website. Each of these created pages will appear on the home page in the carousel in the order of their priority!</p>
                    <p>To create a new page, click th "Create New" button below. To edit, delete, or view the page as it will appear to the user, click the controls beside each page!</p>
                    <p>A maximum of five pages will appear in the carousel. The higher the priority, the sooner it will appear in the carousel.</p>
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Blurb)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Priority)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Photo)
                            </th>


                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Blurb)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Priority)
                                </td>

                                <td>

                                    <img class="img-responsive" src="../Images/@Html.DisplayFor(modelItem => item.Photo)" height="75" width="75" />
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>

                @* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
            </div> <!-- End of Page Container -->
        </div> <!-- End of Page Column -->
    </div> <!-- End of Row -->
</main> <!-- End of Main -->
